# Frontend Configuration (Vite Environment Variables)
# These variables are prefixed with VITE_ and are available in the frontend
# For production deployment, ensure proper security measures:
# - Use HTTPS URLs
# - Restrict to specific domains only
# - Remove hardcoded credentials from frontend

# API Configuration
# For production, use HTTPS URLs and restrict to specific domains
VITE_API_URL=http://10.144.103.103:5000
VITE_FRONTEND_HOST=10.144.103.103
VITE_FRONTEND_PORT=5174
VITE_BACKEND_HOST=10.144.103.103

# Super Admin Credentials for Frontend
# For production, consider using authentication tokens instead of hardcoded credentials
VITE_SUPERADMIN_USERNAME=superadmin
VITE_SUPERADMIN_PASSWORD=SuperAdmin123!

# Production Security Settings
# For production, set VITE_HTTPS=true and use secure URLs
VITE_HTTPS=false
VITE_SECURE_COOKIES=false

# Frontend Security Configuration
VITE_CSP_ENABLED=false
VITE_CSP_REPORT_ONLY=false
VITE_X_FRAME_OPTIONS=DENY
VITE_X_CONTENT_TYPE_OPTIONS=nosniff
VITE_X_XSS_PROTECTION=1; mode=block
VITE_REFERRER_POLICY=strict-origin-when-cross-origin

# API Security
VITE_API_TIMEOUT=30000
VITE_RETRY_ATTEMPTS=3
VITE_ENABLE_REQUEST_LOGGING=false

# Authentication Security
VITE_TOKEN_STORAGE=localStorage
VITE_SESSION_TIMEOUT=3600000
VITE_AUTO_LOGOUT=true
